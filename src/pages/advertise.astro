        opacity: 0.8;
        margin-top: 20px;
    }
    
    @media (max-width: 768px) {
        .b2b-hero { padding: 50px 0; }
        .b2b-benefits, .b2b-pricing, .b2b-testimonials, .b2b-faq { padding: 50px 0; }
        .pricing-grid { grid-template-columns: 1fr; }
    }
</style>