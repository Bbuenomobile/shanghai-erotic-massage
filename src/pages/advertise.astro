    }
    .b2b-faq .faq-item {
        background: white;
        padding: 24px;
        border-radius: 12px;
        margin-bottom: 16px;
    }
    .b2b-faq .faq-item h3 {
        font-size: 1.1rem;
        margin-bottom: 10px;
    }
    .b2b-faq .faq-item p {
        color: var(--text-light);
        line-height: 1.6;
    }
    
    .b2b-cta-final {
