    .pricing-cta {
        display: block;
        width: 100%;
        padding: 14px;
        text-align: center;
        background: var(--bg);
        color: var(--text);
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    .pricing-cta:hover {
        background: var(--primary);
