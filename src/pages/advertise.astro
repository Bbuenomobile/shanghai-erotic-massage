        color: white;
        text-align: center;
    }
    .b2b-cta-final h2 {
        font-size: 2rem;
        margin-bottom: 16px;
    }
    .b2b-cta-final p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 30px;
    }
    .b2b-cta-final .btn-primary-large {
