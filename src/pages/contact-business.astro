<style>
    .contact-hero {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        padding: 60px 0;
        text-align: center;
    }
    .contact-hero h1 {
        font-size: 2rem;
        margin-bottom: 10px;
    }
    .contact-hero p {
        opacity: 0.9;
    }
    
    .contact-content {
        padding: 60px 0;
    }
    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
        align-items: start;
    }
    @media (max-width: 768px) {
        .contact-grid { grid-template-columns: 1fr; }
    }
    
    .contact-info h2 {
        font-size: 1.5rem;
        margin-bottom: 16px;
    }
    .contact-info > p {
        color: var(--text-light);
        line-height: 1.7;
        margin-bottom: 30px;
    }
    
    .contact-methods {
        margin-bottom: 40px;
    }
    .contact-method {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        padding: 20px;
        background: var(--card-bg);
        border-radius: 12px;
        margin-bottom: 12px;
    }
    .method-icon {
        font-size: 1.5rem;
    }
    .contact-method strong {
        display: block;
        margin-bottom: 4px;
    }
    .contact-method p {
        color: var(--text-light);
        margin: 0;
    }
    
    .quick-links h3 {
        font-size: 1.1rem;
        margin-bottom: 12px;
    }
    .quick-links ul {
        list-style: none;
        padding: 0;
    }
    .quick-links li {
        margin-bottom: 8px;
    }
    .quick-links a {
        color: var(--primary);
        font-weight: 500;
    }
    
    .contact-cta-box {
        background: var(--card-bg);
        padding: 40px;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }
    .contact-cta-box h2 {
        font-size: 1.5rem;
        margin-bottom: 12px;
    }
    .contact-cta-box > p {
        color: var(--text-light);
        margin-bottom: 24px;
    }
    .btn-primary-large {
        display: inline-block;
        padding: 16px 40px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border-radius: 30px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    .btn-primary-large:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    .small-note {
        font-size: 13px;
        color: var(--text-light);
        margin-top: 16px;
    }
</style>